{
  "name": "trackable-nz-tests",
  "version": "1.0.0",
  "description": "Automated tests for Trackable NZ mobile app",
  "scripts": {
    "test": "playwright test",
    "test:mobile": "playwright test --project=mobile-chrome",
    "test:iphone": "playwright test --project=mobile-safari",
    "test:desktop": "playwright test --project=desktop-chrome",
    "test:ui": "playwright test --ui",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "report": "playwright show-report",
    "codegen": "playwright codegen http://localhost:5173"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  }
}
